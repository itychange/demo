<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewSex"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_minus1sdp"
            android:background="@drawable/bg_circle_white"
            android:elevation="@dimen/_3sdp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/txtTitleSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_24sdp"
            android:gravity="center_vertical"
            android:text="Continents"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/radioGroupSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

      <!--  <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rdMaleCheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="Europe"
                android:textColor="#ffffff"
                app:buttonTint="@color/colorWhite" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rdFemaleCheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asia"
                android:textColor="#FFFFFF"
                android:padding="@dimen/_8sdp"
                app:buttonTint="@color/colorWhite" />

        </RadioGroup>-->
        <mrblack.myapplication.view.ToggleButtonGroupTableLayout
            android:id="@+id/rdGroupTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginTop="@dimen/_56sdp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdContinentsCheck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="Europe"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite"  />

                <RadioButton
                    android:id="@+id/rdContinentsCheck4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="Asia"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite" />

            </TableRow>

            <TableRow
                android:id="@+id/group2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdContinentsCheck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="America"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite" />

                <RadioButton
                    android:id="@+id/rdContinentsCheck5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/_8sdp"
                    android:text="Africa"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite" />

            </TableRow>
            <TableRow
                android:id="@+id/group3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdContinentsCheck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="Other"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite" />


            </TableRow>

        </mrblack.myapplication.view.ToggleButtonGroupTableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSex"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_54sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="CONTINUE"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/my_flat_button"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="CANCEL"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:visibility="gone"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>