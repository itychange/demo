        <mrblack.myapplication.view.ToggleButtonGroupTableLayout
            android:id="@+id/rdGroupTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginTop="@dimen/_56sdp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdWeightCheck1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 - 35 kg"
                    android:textColor="#ffffff"
                    android:padding="@dimen/_8sdp"
                    android:buttonTint="@color/colorWhite"   />

                <RadioButton
                    android:id="@+id/rdWeightCheck2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36 - 45 kg"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_8sdp"
                    android:buttonTint="@color/colorWhite" />

            </TableRow>

            <TableRow
                android:id="@+id/group2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdWeightCheck3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="46 - 55 kg"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_8sdp"
                    android:buttonTint="@color/colorWhite"/>

                <RadioButton
                    android:id="@+id/rdWeightCheck4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56 - 65 kg"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_8sdp"
                    android:buttonTint="@color/colorWhite" />

            </TableRow>

            <TableRow
                android:id="@+id/group3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdWeightCheck5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66 - 75 kg"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_8sdp"
                    android:buttonTint="@color/colorWhite"  />

                <RadioButton
                    android:id="@+id/rdWeightCheck6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="@dimen/_8sdp"
                    android:text="76 - 90 kg"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/colorWhite"  />

            </TableRow>

        </mrblack.myapplication.view.ToggleButtonGroupTableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWeight"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_54sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="FINISH"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnWeightCancel"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="CANCEL"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>