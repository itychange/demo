<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp">

        <View
            android:id="@+id/viewAge"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_minus1sdp"
            android:background="@drawable/bg_circle_gray_white"
            android:elevation="@dimen/_3sdp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/txtTitleAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_24sdp"
            android:gravity="center_vertical"
            android:text="Age"
            android:textColor="#B6FFFFFF"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/radioGroupAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginTop="@dimen/_56sdp"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 19 old"
                android:textColor="#FFFFFF"
                android:padding="@dimen/_8sdp"
                app:buttonTint="@color/colorWhite"
                />

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 - 24 old"
                android:textColor="#FFFFFF"
                android:padding="@dimen/_8sdp"
                app:buttonTint="@color/colorWhite"
                />
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 - 60 old"
                android:textColor="#FFFFFF"
                android:padding="@dimen/_8sdp"
                app:buttonTint="@color/colorWhite"
                />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="@dimen/_54sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/btnAge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CONTINUE"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                style="@style/Widget.AppCompat.Button.Colored" />
            <Button
                android:id="@+id/my_flat_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CANCEL"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorWhite"
                style="?borderlessButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>